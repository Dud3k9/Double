<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Waiting">

    <TextView
            android:text="Game: "
            android:layout_width="387dp"
            android:layout_height="71dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/game" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="68dp"
            android:textSize="30sp" android:gravity="center"/>
    <TextView
            android:text="Playres:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Players" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" android:layout_marginTop="176dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player1" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/Players" android:layout_marginTop="28dp"
            android:layout_marginStart="44dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player2" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/player1" android:layout_marginTop="28dp"
            android:layout_marginStart="44dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="5"
            android:layout_width="209dp"
            android:layout_height="229dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/timer" android:layout_marginTop="288dp"
            app:layout_constraintTop_toBottomOf="@+id/game" android:gravity="center" android:textSize="150sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>