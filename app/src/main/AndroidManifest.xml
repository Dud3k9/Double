<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.dudek9.adouble">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".Waiting">
        </activity>
        <activity
                android:name=".Join"
                android:label="@string/title_activity_join"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".Create"
                android:label="@string/title_activity_create"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".Multiplayer"
                android:label="@string/title_activity_multiplayer"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".SummaryActivity"
                android:label="@string/title_activity_summary"
                android:parentActivityName=".MainActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.dudek9.adouble.MainActivity"/>
        </activity>
        <activity
                android:name=".Singleplayer"
                android:label="@string/title_activity_singleplayer"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>